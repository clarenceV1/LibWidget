<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SlidingTabLayout">
        <attr name="slidingTabTextSize" format="dimension"/>
        <attr name="slidingTabTextColor" format="reference|color"/>
        <attr name="slidingTabTextSelectColor" format="reference|color"/>
        <attr name="slidingTabTextBackground" format="reference"/>
        <attr name="slidingTabIndicatorColor" format="reference|color"/>
        <attr name="slidingTabIndicatorHight" format="dimension"/>
        <attr name="slidingTabDividerColor" format="reference|color"/>
        <attr name="slidingTabStyle">
            <enum name="typeDefault" value="0"/>
            <enum name="typeAlignCenter" value="1"/>
            <enum name="typeAverage" value="2"/>
        </attr>
        <attr name="countPerScreen" format="float"/>
    </declare-styleable>

    <declare-styleable name="QuickSideBarView">
        <attr name="sidebarTextColor" format="color|reference"/>
        <attr name="sidebarBackgroundColor" format="color|reference"/>
        <attr name="sidebarTextColorChoose" format="color|reference"/>
        <attr name="sidebarTextSize" format="dimension"/>
        <attr name="sidebarTextSizeChoose" format="dimension"/>
        <attr name="sidebarItemHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="indicator">
        <!--正常颜色-->
        <attr name="normalColor" format="reference"/>
        <!--选中颜色-->
        <attr name="selectColor" format="reference"/>
        <!--正常 是否空心-->
        <attr name="normalKongxin" format="boolean"/>
        <!--选中 是否空心-->
        <attr name="selectKongxin" format="boolean"/>
        <!--点的宽高-->
        <attr name="icon_w_h" format="dimension"/>

    </declare-styleable>
</resources>